%%-*- mode: erlang -*-
{cover_enabled, true}.

{minimum_otp_vsn, "27"}.

{erl_opts, [
    debug_info,
    fail_on_warning,
    {parse_transform, lager_transform}
]}.

{project_plugins, [
    {rebar3_hex, "~> 7.0"},
    {erlfmt, "~> 1.6"}
]}.

{deps, [
    {lager, "~> 3.9"}
]}.

{erlfmt, [
    write,
    {print_width, 140}
]}.
