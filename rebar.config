%%-*- mode: erlang -*-
{cover_enabled, true}.

{minimum_otp_vsn, "27"}.

{erl_opts, [
    {parse_transform, lager_transform},
    debug_info,
    warnings_as_errors,
    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    warn_export_vars,
    warn_exported_vars,
    warn_untyped_record,
    warn_missing_spec
]}.

{project_plugins, [
    {rebar3_hex, "~> 7.0"},
    {erlfmt, "~> 1.6"}
]}.

{deps, [
    {lager, "~> 3.9"}
]}.

{dialyzer, [
    {warnings, [
        no_return,
        unmatched_returns,
        error_handling,
        underspecs,
        unknown
    ]},
    {plt_extra_apps, [lager]}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{erlfmt, [
    write,
    {print_width, 140}
]}.
